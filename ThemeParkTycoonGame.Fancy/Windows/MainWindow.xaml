<Window x:Class="ThemeParkTycoonGame.Fancy.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThemeParkTycoonGame.Fancy.Windows"
        xmlns:controls="clr-namespace:ThemeParkTycoonGame.Fancy.Controls"
        mc:Ignorable="d"
        Title="Theme Park Tycoon Simulation" Height="450" Width="800">
    <Grid>
        <Grid>
            <TabControl>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Resources/roller_coaster_48.png"
                                   Height="16"/>
                            <TextBlock Text="Park" Foreground="Blue" />
                        </StackPanel>
                    </TabItem.Header>
                    <controls:ParkControl />
                </TabItem>
                
                <TabItem Header="Security" />
            </TabControl>
        </Grid>
    </Grid>
</Window>
